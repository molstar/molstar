{
    "compilerOptions": {
        "composite": true,
        "target": "es5",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        // "downlevelIteration": true,
        "jsx": "react",
        "lib": [ "es6", "dom", "esnext.asynciterable", "es2016" ],
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "mol-app": ["./mol-app"],
            "mol-data": ["./mol-data", "./mol-data/index.ts"],
            "mol-geo": ["./mol-geo"],
            "mol-gl": ["./mol-gl"],
            "mol-io": ["./mol-io"],
            "mol-math": ["./mol-math"],
            "mol-model": ["./mol-model"],
            "mol-model-props": ["./mol-model-props", "./mol-model-props/index.ts"],
            "mol-ql": ["./mol-ql"],
            "mol-repr": ["./mol-repr"],
            "mol-script": ["./mol-script"],
            "mol-state": ["./mol-state", "./mol-state/index.ts"],
            "mol-plugin": ["./mol-plugin", "./mol-plugin/index.ts"],
            "mol-task": ["./mol-task", "./mol-task/index.ts"],
            "mol-theme": ["./mol-theme"],
            "mol-util": ["./mol-util", "./mol-util/index.ts"],
            "mol-canvas3d": ["./mol-canvas3d"]
        }
    },
    "include": [ "src/**/*" ],
}