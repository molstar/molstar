{
    "compilerOptions": {
        "declaration": true,
        "target": "es2018",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "noEmitHelpers": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "lib": [ "es2018", "dom", "ES2022.Object" ],
        "rootDir": "src",
        "outDir": "lib/commonjs"
    },
    "include": [ "src/**/*" ]
}